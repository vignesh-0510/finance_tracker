<div class="results-block">
  <%= render 'layouts/messages' %>
</div>

<% if @friends_search %>
  <div class="container-fluid">
    <div class="card card-header results-block">
      <table class="col-md-12">
        <tbody>
          <% @friends_search.each do |friend|%>
            <tr>
              <td><strong>Name: </strong><%= friend.full_name %></td>
              <td><strong>E-mail: </strong><%= friend.email %></td>
              <td>
                <strong>Actions: </strong><%= link_to "View Profile", user_path(friend), class:"btn btn-sm btn-outline-info ml-3" %>
                <% if current_user.not_friends_with?(friend) %>
                  <%= link_to "Follow", friendships_path(friend: friend), class: 'btn btn-sm btn-outline-success ml-3', method: :post%>
                <% else %>
                  <span class='badge badge-warning'> You are friends</span>
                <%  end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% end %>